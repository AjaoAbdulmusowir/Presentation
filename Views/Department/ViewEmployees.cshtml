@using Application.Dtos
@model List<EmployeeDto>

<h2>Employees in @ViewBag.Department</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Position</td>
                    <td>
                        <a href="@Url.Action("Details", "Employee", new { id = employee.Id })" class="btn btn-success">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found in this department.</p>
}

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to Departments</a>